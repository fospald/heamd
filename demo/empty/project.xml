<?xml version="1.0" encoding="utf-8"?>
<settings>
	<title>Empty project</title>
	
	<!-- Note on units:
		length unit: Bohr radius a0 = 5.29e-11 m
		mass unit: electron mass m_e =  9.109e-31 kg
		charge unit: e = 1.60e-19 C
		angular momentum: reduced Planck h = 6.626e-34 Js 
		energy unit: Hartree E_h = 4.36e-18 J
		time: a.t.u. = h/E_h = 2.419e-17 s
	-->
	
	<!-- read elements from database -->
	<element_db>../elements.xml</element_db>
	
	<!-- modify/add elements -->
	<elements>
		<element id="Al" color="#ff0000" />
		<element id="Cr" color="#00ff00" />
		<element id="Co" color="#0000ff" />
	</elements>
	
	<!-- RVE dimensions -->
	<cell type="cubic">
		<a0>4</a0>
		<a1>4</a1>
		<a2>4</a2>
	</cell>
	
	<!-- random seed -->
	<seed>1</seed>

	<!-- number of atoms -->
	<n>4</n>
	
	<!-- periodic boundary conditions -->
	<periodic_bc>1</periodic_bc>
	
	<!-- volume fractions -->
	<fractions>
		<fraction element="Al" value="1" />
		<fraction element="Cr" value="0" />
		<fraction element="Co" value="0.0" />
	</fractions>

	<!-- max neighbour distance for force calculations, relative value to the RVE size max(dx,dy,dz)
	     computed automatically if < 0 -->
	<nn_radius>-1</nn_radius>
	
	<!-- number of neighbour atom in each direction to compute dmax, if not provided -->
	<nn_levels>10</nn_levels>

	<!-- thermodynamic state variables and simulation time
	     if values for pressure or temperature are not provided
	     values of the last time step are used
	     if initial temperature or pressure it will be calculated from the other variable
		-->
	<steps>
		<step t="0" T="1000" />
		<step t="1000" T="300" />
	</steps>
	
	<!-- fixed time step size -->
	<dt>0.5</dt>

	
	<!-- data storage interval in multiple of dt -->
	<step_limit>0.01</step_limit>
	
	<!-- data storage interval in multiple of dt -->
	<store_interval>10</store_interval>
	
	<!-- number of OpenMP threads -->
	<num_threads>1</num_threads>

	<!-- actions to perform -->
	<actions>
		<move_molecule id="0" p0="0" p1="0" p2="0" />
		<move_molecule id="1" p0="0" p1="2" p2="2" />
		<move_molecule id="2" p0="2" p1="0" p2="2" />
		<move_molecule id="3" p0="1.9" p1="2" p2="0" />
		<run />
		<print_timings />
	</actions>

</settings>
